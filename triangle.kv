<Container>:
    # Окно приложения
    orientation: 'vertical'
    padding: 5
    spacing: 10



    # Текстовое поле
    MyMessage:
        id: my_message
        message_text: ''
        text: self.message_text
        text_size: self.size
        font_size: 20
        halign: 'center'
        valign: 'center'
        size_hint: (1, 0.33)


    # Поле обратного отсчета
    MyTimer:
        id: my_timer
        time_text: ''
        text: 'Осталось: ' + self.time_text
        font_size: 20
        size_hint: (1, 0.10)
        text_size: self.size
        halign: 'center'
        valign: 'center'


    # Поле графического окна
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint: (1, 0.47)

        MyGraphicWidget:
            id: my_graphic_widget
            size_hint: (None, None)
            size: (min(self.parent.size), min(self.parent.size))
            my_message: my_message
            my_timer: my_timer


    # Поле управления скоростью
    SpeedControl:
        id: speed_control
        spacing: 3
        size_hint: (1, 0.10)
        my_timer: my_timer
        my_graphic_widget: my_graphic_widget

        Button:
            text: '-'
            font_size: 20
            size_hint: (0.25, 1)
            on_press: self.parent.speed_down()

        Label:
            text: 'Скорость'
            font_size: 20
            size_hint: (0.50, 1)

        Button:
            text: '+'
            font_size: 20
            size_hint: (0.25, 1)
            on_press: self.parent.speed_up()
