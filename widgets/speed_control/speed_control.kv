# Поле управления скоростью
<SpeedControl>:
    spacing: 3

    Button:
        text: '-'
        font_size: 20
        size_hint: (0.25, 1)
        on_press: self.parent.speed_down()

    Label:
        text: 'Скорость'
        font_size: 20
        size_hint: (0.50, 1)

    Button:
        text: '+'
        font_size: 20
        size_hint: (0.25, 1)
        on_press: self.parent.speed_up()
